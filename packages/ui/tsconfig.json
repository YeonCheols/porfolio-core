{
  "extends": "@yeoncheols/portfolio-core-tsconfig/react-library.json",
  "include": [".", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["dist", "build", "node_modules"],
  "compilerOptions": {
    "types": ["react", "react-dom", "node"],
    "target": "ESNext",
    "module": "ESNext",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/primitives": ["src/ui-primitives"],
      "@/components": ["src/ui-components"],
      "@/types": ["src/types"],
      "@/utils": ["src/utils"],
      "@/hooks": ["src/hooks"],
      "@/constant": ["src/constant"],
      "@/store": ["src/store"]
    }
  }
}
