{
  "extends": "@yeoncheols/portfolio-core-tsconfig/react-app.json",
  "include": [
    ".",
    "stories/**/*.ts",
    "stories/**/*.tsx",
    "types/**/*.d.ts",
    "types/**/*.ts",
    "../../packages/ui/src/**/*.ts",
    "../../packages/ui/src/**/*.tsx"
  ],
  "exclude": ["dist", "build", "node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@ui": ["../../packages/ui/src"],
      "@ui/*": ["../../packages/ui/src/*"],
      "@/*": ["../../packages/ui/src/*"]
    }
  }
}
